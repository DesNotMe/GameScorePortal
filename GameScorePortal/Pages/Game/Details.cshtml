@page
@model GameScorePortal.Pages.Game.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Genre)
        </dd>
    </dl>

    <h4>Game Scores</h4>
    @if (Model.Game.GameScores != null && Model.Game.GameScores.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Player Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var score in Model.Game.GameScores)
                {
                    <tr>
                        <td>@score.Player.LastName <span>@score.Player.FirstName</span></td>
                        
                        <td>@(score.Score)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No scores available for this game.</p>
    }
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Game.GameId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
